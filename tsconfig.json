{
	"include": ["assets/js/src/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./assets/js/dist",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "../",
		"paths": {
			"@cipscis/throttle-with-debounce": ["./src/throttle-with-debounce.js"]
		},
	}
}